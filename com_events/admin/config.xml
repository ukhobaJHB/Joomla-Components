<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">

		<field
			name="show_category"
			type="radio"
			label="Show category"
			description="If set to Show, the title of the event&rsquo;s category will show."
			default="0">

			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>

		<field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox" validate="rules" filter="rules" component="com_event" 
            section="component" />
	</fieldset>
</config>